{
  "title": "Calculator App — CI/CD Monitor",
  "uid": "calculator-cicd",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "10s",
  "time": { "from": "now-15m", "to": "now" },
  "panels": [

    {
      "id": 1,
      "title": "Request Rate (req/sec)",
      "description": "How many HTTP requests the app receives per second. Spike = traffic surge.",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "rate(http_requests_total[1m])",
          "legendFormat": "{{method}} {{handler}} ({{status_code}})",
          "datasource": "Prometheus"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": { "mode": "palette-classic" }
        }
      }
    },

    {
      "id": 2,
      "title": "Error Rate (%)",
      "description": "Percentage of requests returning 4xx or 5xx. Should stay at 0% in normal operation.",
      "type": "timeseries",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "rate(http_requests_total{status_code=~\"4..|5..\"}[1m]) / rate(http_requests_total[1m]) * 100",
          "legendFormat": "Error %",
          "datasource": "Prometheus"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": { "fixedColor": "red", "mode": "fixed" },
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "red",   "value": 1 }
            ]
          }
        }
      }
    },

    {
      "id": 3,
      "title": "Request Latency — p50 / p95 / p99",
      "description": "How long requests take. p95 = 95% of requests finish within this time. High p99 = slow outliers.",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket[1m]))",
          "legendFormat": "p50 (median)",
          "datasource": "Prometheus"
        },
        {
          "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[1m]))",
          "legendFormat": "p95",
          "datasource": "Prometheus"
        },
        {
          "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket[1m]))",
          "legendFormat": "p99",
          "datasource": "Prometheus"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": { "mode": "palette-classic" }
        }
      }
    },

    {
      "id": 4,
      "title": "Total Requests (all time)",
      "description": "Running total of every request served since the app started.",
      "type": "stat",
      "gridPos": { "x": 12, "y": 8, "w": 6, "h": 8 },
      "targets": [
        {
          "expr": "sum(http_requests_total)",
          "legendFormat": "Total",
          "datasource": "Prometheus"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": { "fixedColor": "blue", "mode": "fixed" }
        }
      }
    },

    {
      "id": 5,
      "title": "Requests by Operation",
      "description": "Breakdown of calculator usage: which operation (add/subtract/multiply/divide) is used most.",
      "type": "piechart",
      "gridPos": { "x": 18, "y": 8, "w": 6, "h": 8 },
      "targets": [
        {
          "expr": "sum by (handler) (http_requests_total{method=\"POST\"})",
          "legendFormat": "{{handler}}",
          "datasource": "Prometheus"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "short" }
      }
    }

  ]
}
